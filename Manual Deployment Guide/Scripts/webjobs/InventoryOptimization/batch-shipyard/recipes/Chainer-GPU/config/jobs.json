{
    "job_specifications": [
        {
            "id": "chainerjob",
            "tasks": [
                {
                    "image": "chainer/chainer",
                    "remove_container_after_exit": true,
                    "resource_files": [
                        {
                            "file_path": "train_mnist.py",
                            "blob_source": "https://raw.githubusercontent.com/pfnet/chainer/master/examples/mnist/train_mnist.py"
                        }
                    ],
                    "command": "python -u train_mnist.py -g 0",
                    "gpu": true
                }
            ]
        }
    ]
}
